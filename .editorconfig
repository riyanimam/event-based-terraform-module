# EditorConfig â€” Enforces consistent coding styles
# https://EditorConfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Terraform/OpenTofu files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
max_line_length = 120

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2
max_line_length = 100

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
max_line_length = 100

# GitHub Actions
[.github/workflows/*.{yml,yaml}]
indent_style = space
indent_size = 2
